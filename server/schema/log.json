{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Log Schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[1345][a-f0-9]{3}-[a-f0-9]{4}-[a-f0-9]{12}$"
        },
        "user_id": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[1345][a-f0-9]{3}-[a-f0-9]{4}-[a-f0-9]{12}$"
        },
        "action": {
            "type": "string",
            "enum": ["create", "update", "delete"]
        },
        "attributes": {
            "$ref": "users.json#/user"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": ["id", "user_id", "action", "attributes", "created_at"]
}

